<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title> Course Page </title>
        <link href="css/bootstrap.min.css" rel="stylesheet">
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">CMU Course List</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/search">Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/about">About</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-md-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    
        <div class="container" style="margin-top:50px">
           <h1 clsss="display-1">{{.Course.CID}}: {{.Course.Name}}</h1>
            <div class="container">
                <div class="row">
                    <div class="col-sm"><b>Department: </b>{{.Course.Dept}}</div>
                    <div class="col-sm"><b>Unit: </b>{{.Course.Units}}</div>
                    <div class="col-sm"><b>Course level: </b>{{.Course.FCELevel}}</div>
                </div>
                <div class="row">
                    <div class="col-sm-4"> <b>FCE Hour: </b>{{.Course.FCEHours}}</div>
                    <div class="col-sm-4"> <b>FCE Rate: </b>{{.Course.FCECourseRate}}</div>
                </div> 
            </div>
            <br>
            <div class="container">
                <h3>Professor</h3>
                {{ range $index, $value := .ProfArray }}
                <div class="row">
                    <div class="col-sm-4">{{ $value.Name }}</div>
                    <div class="col-sm-4">Rate My Professor: {{ $value.RMPRatingOverall }}</div>
                </div>
               {{ end }}
            </div>
            <br>
            <div class="container">
                <h3>Course Description</h3>
                <p>{{.Course.Description}}</p>
            </div>
            <div class="container">
                <p><b>Pre-requisite: </b>{{.Course.Prereq}}</p>
                <p><b>Co-requisite: </b>{{.Course.Coreq}}</p>
            </div>  
            
            <!--Comment Box-->
            <form>
                <fieldset>
                    <div class="form-group">
                        <label for="exampleTextarea" class="form-label mt-4">Comment Board</label>
                        <textarea class="form-control" id="exampleTextarea" rows="3" placeholder="Enter comment here"></textarea>
                    </div>
                    <button type="button" class="btn btn-primary" style="margin-top:10px">Send</button>
                </fieldset>
            </form>
            <!--Comment Display-->
            <hr>
            <div class="card" style="margin-top:10px">
                <div clsss="card body" href="#" style="margin-left:7.5px">Name</div>
                <div class="container">
                    <p>Comment ..</p>
                </div>
            </div>
            <div class="card" style="margin-top:10px">
                <div clsss="card body" href="#" style="margin-left:7.5px">Name</div>
                <div class="container">
                    <p>Comment...</p>
                </div>
            </div>
            <div class="card" style="margin-top:10px">
                <div clsss="card body" href="#" style="margin-left:7.5px">Name</div>
                <div class="container">
                    <p>Comment...</p>
                </div>
            </div>

            <footer id="footer" style="margin-top:50px;">
                <hr>
                <div class="row">
                    <div class="col-lg-12">
                        <p>Made by <i>Project Candela</i></p>
                        <p>Contact Us: project-candela (at) lists.andrew.cmu.edu<p>
                    </div>
                </div>
            </footer>    
        </div>

    <script src="js/bootstrap.bundle.min.js"></script>
  </body>
</html>
